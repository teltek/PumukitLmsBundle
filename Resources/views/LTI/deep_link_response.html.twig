        <div class="col text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="sr-only"></span>
            </div>
            <br /><br />
            <span>Sending deep link resource... </span>
        </div>
    </div>

    <form id="autosubmit" method="POST" action="{{ target_link_uri }}">
